<Page
    x:Class="FluentCounter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentCounter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource SystemControlChromeMediumAcrylicWindowMediumBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button x:ConnectionId='2' Grid.Row="1" Grid.Column="1" Name="StartButton" Content="Start" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Center" FontSize="20"                          />
        <TextBlock x:ConnectionId='3' Grid.Row="1" Grid.Column="1" Name="CountdownText"  HorizontalAlignment="Center" Margin="0,0,0,0" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="72"/>
        <TextBlock x:ConnectionId='4' Grid.Row="1" Grid.Column="1" Name="CountdownText2"  HorizontalAlignment="Center" Margin="0,300,0,0" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="72"/>
        <TextBlock x:ConnectionId='5' Grid.Row="1" Grid.Column="1" Name="CountdownText3"  HorizontalAlignment="Center" Margin="0,558,0,0" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72"/>

    </Grid>
</Page>

